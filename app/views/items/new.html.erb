<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
        <h1>商品投稿</h1>
          <% if @item.errors.any? %>
            <%= @item.errors.count %>件のエラーが発生しました
            <% @item.errors.full_messages.each do |message| %>
            <%= message %>
            <% end %>
          <% end %>
          
          <%= form_with model: @item, local:true do |f| %>
          
          <div class="field">
          <h4>商品画像</h4>
            <%= f.attachment_field :image %>
          </div>
          
          <div class="field">
          <h4>商品名</h4>
            <%= f.text_field :name %>
          </div>
          
          <div class="field">
          <h4>商品説明</h4>
            <%= f.text_area :caption %>
          </div>
          
          <%= f.submit '投稿' %>
          <% end %>
          
        
      </div>
   </div>
</div>