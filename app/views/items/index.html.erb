
<div class="card-list-container py-5">
  <% @items.each do |item| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to item_path(item.id) do %>
      <%= attachment_image_tag item, :image, class:"card-img-top";%>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag item.customer, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to  item_path(item.id), class:"text-dark"  do %>
              <strong><i class="far fa-flag"></i><span> <%= item.name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= item.caption %></p>
          <span><i class="fas fa-user"></i> By <%= item.customer.name %> ｜ </span>
          <span><%= link_to "#{item.comments.count} コメント", item_path(item.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
