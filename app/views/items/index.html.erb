<div class= "container">
  <div class = "row">
    <div class= "col-md-12 mt-5 text-center">
      <a href="https://px.a8.net/svt/ejp?a8mat=3HKY8E+7GIILU+4KMO+5Z6WX" rel="nofollow">
       <img border="0" width="468" height="60" alt="" src="https://www24.a8.net/svt/bgt?aid=210929486451&wid=001&eno=01&mid=s00000021336001004000&mc=1"></a>
       <img border="0" width="1" height="1" src="https://www13.a8.net/0.gif?a8mat=3HKY8E+7GIILU+4KMO+5Z6WX" alt="">
    </div>
  </div>
</div>

<div class= "paginate">
  <%= paginate @items %>
</div>

  
  
  <% @items.each do |item| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to item_path(item.id) do %>
      <%= attachment_image_tag item, :image, class:"card-img-top";%>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= link_to customer_path(item.customer_id) do %>
            <%= attachment_image_tag item.customer, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
        </div>
        <%end%>
        <div class="col-10">
          <p class="card-title">
            <%= link_to  item_path(item.id), class:"text-dark"  do %>
              <strong><i class=""></i><span> <%= item.name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">
            <%= item.caption %>
          </p>
          <span><i class="fas fa-user"></i>　<%= item.customer.name %> ｜ </span>
          <span><%= link_to "#{item.comments.count} コメント", item_path(item.id), class:"text-dark" %></span>
        </div>
            <% if item.favorited_by?(current_customer) %>
    <p>
      <%= link_to item_favorites_path(item), method: :delete do %>
        ♥<%= item.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to item_favorites_path(item), method: :post do %>
        ♡<%= item.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
      </div>
    </div>
  </div>
  <% end %>
  
<div class= "paginate">
  <%= paginate @items %>
</div>