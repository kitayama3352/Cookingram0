<% @items.each do |item| %>
<div>
  
  <%= link_to item_path(item.id) do %>
    <%= attachment_image_tag item, :image %>
  <% end %>
  
  <p>投稿ユーザー画像：<%= attachment_image_tag item.customer, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <p>ショップ名：<%= item.name %></p>
  <p>説明：<%= item.caption %></p>
  <p>ユーザーネーム：<%= item.customer.name %></p>
  <p><%= link_to "#{item.comments.count}", item_path(item.id) %></p>

</div>
<% end %>