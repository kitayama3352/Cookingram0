<div>
  <%= attachment_image_tag @item, :image %>
  <p>ショップ名：<%= @item.name %></p>
  <p>説明：<%= @item.caption %></p>
  <p>ユーザーネーム：<%= @item.customer.name %></p>
  <p>投稿日時：<%= @item.created_at.strftime('%Y/%m/%d') %></p>
  <% if @item.customer == current_customer %>
    <%= link_to "削除", item_path(@item), method: :delete %>
  <% end %>
  
  
    <% if @item.favorited_by?(current_customer) %>
    <p>
      <%= link_to item_favorites_path(@item), method: :delete do %>
        ♥<%= @item.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to item_favorites_path(@item), method: :post do %>
        ♡<%= @item.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
  
</div>

<div>
<p>コメント件数：<%= @item.comments.count %></p>
<% @item.comments.each do |comment| %>
  <p><%= attachment_image_tag comment.customer, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <%= comment.customer.name %>
  <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
  
  <% if comment.customer == current_customer %>
    <div>
      <%= link_to "削除", item_comment_path(comment.item, comment), method: :delete %>
    </div>
  <% end %>
  
<% end %>
</div>

<div>
<%= form_with(model:[@item, @comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>