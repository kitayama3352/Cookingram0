<div>
  <h3><%= @customer.name %></h3>
    <%= attachment_image_tag @customer, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <% if @customer.id == current_customer.id %>
    <p><%= link_to "プロフィール編集", edit_customer_path(@customer) %></p>
  <% end %>
</div>

<% @items.each do |item| %>
<div>
  <%= link_to item_path(item.id) do %>
    <%= attachment_image_tag item, :image %>
  <% end %>
  <p>投稿ユーザー画像：<%= attachment_image_tag item.customer, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <p>ショップ名：<%= item.name %></p>
  <p>説明：<%= item.caption %></p>
  <p>ユーザーネーム：<%= item.customer.name %></p>
</div>
<% end %>
