<div class="container">
  <div class="row">
    <div class="col-md-4 text-center"><h2>プロフィール</h2>
      <div class="card " style="width: 18rem;">
        <%= attachment_image_tag @customer, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <div class="card-body">
          <h5 class="card-title"><%= @customer.name %></h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        </div>
          <div class="card-body">
            <p><%= link_to "プロフィール編集", edit_customer_path(@customer), class: "btn btn-secondary" %></p>
          </div>
      </div>
    </div>
    
    <div class="col-lg-8"><h2>投稿一覧</h2>
      <table class="table table-striped">
       <% @items.each do |item| %>
       <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, :fill, 60, 60%>
       <% end %>
       <p>商品名：<%= item.name %></p>
       <p>商品説明：<%= item.caption %></p>
       <p><%= link_to '編集', edit_item_path(item.id), class: "btn btn-secondary" %></p>
       <% end %>
     </table>
   </div>
  </div>
</div>
